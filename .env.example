# Streamwall Ecosystem Environment Configuration
# Copy this file to .env and fill in your values

# Service Configuration
NODE_ENV=production
TZ=America/Los_Angeles

# Ports Configuration
LIVESTREAM_MONITOR_PORT=3001
STREAMSOURCE_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379

# Database Configuration (for StreamSource)
POSTGRES_USER=streamsource
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=streamsource_development

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# StreamSource Configuration
RAILS_ENV=development
DATABASE_URL=postgresql://streamsource:your_secure_password_here@postgres:5432/streamsource_development
SECRET_KEY_BASE=your_secret_key_base_here
JWT_SECRET=your_jwt_secret_here
STREAMSOURCE_API_KEY=your_api_key_here

# Discord/Twitch Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CHANNEL_ID=your_discord_channel_id_here
TWITCH_CHANNEL=channel_name_without_hash

# Google Sheets Configuration
GOOGLE_SHEET_ID=your_google_sheet_id_here